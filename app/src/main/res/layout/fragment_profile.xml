<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.anthony.clinicplace.ProfileFragment"
    android:padding="15dp">

    <!-- TODO: Update blank fragment layout -->
   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/profile_picture"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:src="@mipmap/ic_launcher"
           app:layout_constraintTop_toBottomOf="parent"
           app:layout_constraintLeft_toRightOf="parent"
           />
       <TextView
           android:id="@+id/username"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintLeft_toRightOf="@id/profile_picture"
           android:layout_marginLeft="15dp"
           android:text="HOLA"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="15dp"
           app:layout_constraintTop_toBottomOf="@id/profile_picture"

           >
           <LinearLayout
               android:id="@+id/op1"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:background="@drawable/border"
               android:gravity="center_vertical"
               >
               <ImageView
                   android:id="@+id/image1"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@mipmap/ic_launcher"

                   />

               <TextView
                   android:id="@+id/txtop1"
                   android:layout_width="wrap_content"
                   android:layout_height="20dp"
                   android:layout_marginLeft="10dp"
                   android:text="Escibre una opinion"
                   />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/op2"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:background="@drawable/border"
               android:gravity="center_vertical"
               >
               <ImageView
                   android:id="@+id/image2"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@mipmap/ic_launcher"
                   />

               <TextView
                   android:id="@+id/txtop2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="Historial de Citas"
                   />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/op3"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:background="@drawable/border"
               android:gravity="center_vertical"
               >
               <ImageView
                   android:id="@+id/image3"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@mipmap/ic_launcher"
                   />

               <TextView
                   android:id="@+id/txtop3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="Clinicas favoritas"
                   />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/op4"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:background="@drawable/border"
               android:gravity="center_vertical"
               >
               <ImageView
                   android:id="@+id/image4"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@mipmap/ic_launcher"
                   />

               <TextView
                   android:id="@+id/txtop4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="Buzon de mensajes"
                   />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/op5"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:background="@drawable/border"
               android:gravity="center_vertical"

               >
               <ImageView
                   android:id="@+id/image5"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@mipmap/ic_launcher"
                   />

               <TextView
                   android:id="@+id/txtop5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="Cerrar Sesion"
                   />
           </LinearLayout>
         </LinearLayout>

   </android.support.constraint.ConstraintLayout>

</FrameLayout>

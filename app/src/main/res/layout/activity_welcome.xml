<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.anthony.clinicplace.WelcomeActivity">


    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a Cliplace"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/bienvenido"
        />
    <TextView
        android:id="@+id/elegirFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fotoPerfil"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:text="Elegir Foto"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />

    <TextView
        android:id="@+id/mensaje_bienvenida"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/elegirFoto"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/Mensaje"
        />

    <TextView
        android:id="@+id/editar_parfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mensaje_bienvenida"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:text="Editar Perfil"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />

    <TextView
        android:id="@+id/saltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mensaje_bienvenida"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:text="Saltar"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />


</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.anthony.clinicplace.OptionRegisterActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        />
    <TextView
        android:id="@+id/elegirFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:text="Elegir Foto"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombres"
        android:layout_marginTop="20dp"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        app:layout_constraintTop_toBottomOf="@+id/elegirFoto"
        app:layout_constraintLeft_toRightOf="parent"
        />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre"
        style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
        android:hint="Ingrese Nombres"
        />
    <TextView
        android:id="@+id/txtApellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        app:layout_constraintLeft_toRightOf="parent"
        />

    <EditText
        android:id="@+id/apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtApellidos"
        style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
        android:hint="Ingrese Apellidos"
        />

    <TextView
        android:id="@+id/txtDNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DNI"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        app:layout_constraintTop_toBottomOf="@+id/apellidos"
        app:layout_constraintLeft_toRightOf="parent"
        />

    <EditText
        android:id="@+id/dni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtDNI"
        style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
        android:hint="Ingrese DNI"
        />
    <TextView
        android:id="@+id/txtUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubicacion"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        app:layout_constraintTop_toBottomOf="@+id/dni"
        app:layout_constraintLeft_toRightOf="parent"
        />

    <AutoCompleteTextView
        android:id="@+id/ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtUbicacion"
        style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
        android:hint="Ingrese Distrito"
        />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@+id/ubicacion"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>
